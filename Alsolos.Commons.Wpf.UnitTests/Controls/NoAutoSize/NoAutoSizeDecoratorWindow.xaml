        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:commons="http://alsolos.ch/Commons/Wpf"
        Title="NoAutoSizeDecorator Test" SizeToContent="WidthAndHeight">

    <Window.Resources>
        <ResourceDictionary Source="/Alsolos.Commons.Wpf;component/Styles/Styles.xaml"/>
    </Window.Resources>

    <ScrollViewer>
        <commons:NoAutoSizeDecorator MinWidth="256" MinHeight="128">
            <TextBox Text="Hello" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="32"/>
        </commons:NoAutoSizeDecorator>
    </ScrollViewer>

</Window>
